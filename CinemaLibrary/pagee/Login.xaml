<Page x:Class="CinemaLibrary.pagee.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaLibrary.pagee"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>


        <StackPanel Orientation="Vertical">
            <Button Content="Назад" Width="150px" Height="30px" HorizontalAlignment="Right" Click="Button_Click" />
            <TextBlock Text="Username:" Grid.Row="0"/>
            <TextBox x:Name="UsernameTextBox" Grid.Row="0" Margin="5"/>

            <TextBlock Text="Password:" Grid.Row="1"/>
            <PasswordBox x:Name="PasswordBox" Grid.Row="1" Margin="5"/>

            <Button Content="Login" Grid.Row="2" Margin="5" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
