<Page x:Class="CinemaLibrary.pagee.Lists"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaLibrary.pagee"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lists">

    <Grid>
        <StackPanel>
            <Button Content="Назад" Width="150px" Height="30px" HorizontalAlignment="Right" Click="Button_Click" />
            <TextBlock Text="Выберите какой фильм добавить в избранное"/>
            <Button Content="Добавить в избранное" Click="AddToFavoritesButton_Click"/>
            <Button Content="Посмотреть избранное" Click="ViewFavoritesButton_Click"/>
        </StackPanel>

        <ListBox x:Name="MoviesListBox" Margin="10" SelectionMode="Single" Height="260">
            <!-- Обработчик клика для добавления фильма в избранное -->
            
        </ListBox>
    </Grid>
</Page>
